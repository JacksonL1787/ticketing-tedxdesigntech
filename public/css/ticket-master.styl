.tickets
  width 90%
  display flex
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  height fit-content
  justify-content center
  .ticketGA
    margin-right 20%
  .ticketVIP,
  .ticketGA
    width fit-content
    height fit-content
    position relative
    .badge
      width 350px
      border-radius .3em
      height 500px
      background rgba(0,0,0,0.2)
      margin-bottom 30px
      box-shadow 0 3px 12px 3px rgba(0,0,0,0.1)
    .price
      color white
      text-align center
    p.desc
      color lightgrey
      font-size 13px
      margin 0 0 5px
      text-align center
    .ticket-count
      width 120px
      height 35px
      position relative
      color white
      left 50%
      transform translateX(-50%)
      font-size 15px
      text-align center
      border none
      background rgba(255,255,255,0.04)
      transition background .3s
      &:hover,
      &:focus
        background rgba(255,255,255,0.02)
    p.left
      color grey
      font-size 12px
      text-align center
      margin 2px 0
.purchase-wrap
  position absolute
  bottom 30px
  left 50%
  transform translateX(-50%)
  width fit-content
  p.total
    color grey
    text-align center
    font-size 16px
    font-weight 600
    span.total-price
      color white
  .next-step
    width 200px
    cursor pointer
    height 35px
    border-radius 200px
    background red
    position relative
    &.disabled
      background #717171 !important
      cursor not-allowed !important
      p
        color #dadada !important
      .arrow
        opacity 0 !important
    &:hover
      .arrow
        right 10px
        opacity 1
    p
      color white
      position absolute
      margin 0
      font-size 15px
      font-weight 800
      letter-spacing 0.5px
      top 50%
      left 50%
      transform translate(-50%, -50%)
    .arrow
      background-image url('/img/right-arrow.svg')
      background-size cover
      background-position center
      height 23px
      width 22px
      opacity 0
      position absolute
      top calc(50% + 2.5px)
      right 20px
      transform translateY(-50%)
      transition right .3s, opacity .3s
