.top
  width 100%
  height fit-content
  padding 25px 0
  display none
  h1.page-title
    color white
    text-align center
    font-weight 500
    letter-spacing 1px
    margin 0
  p.desc
    color lightgrey
    margin 5px auto
    display block
    width 450px
    text-align center
    font-weight 300
    a
      color red
      text-decoration none
      &:hover
        text-decoration underline

.not-valid-wrap
  margin 70px auto 0
  display none
  h2.title
    color white
    font-size 40px
    text-align center
    margin 0
    letter-spacing 0.5px
    text-transform uppercase
  p.desc
    color #b9b9b9
    font-size 14px
    letter-spacing 0.3px
    line-height 130%
    width 650px
    text-align center
    margin 5px auto 0
    a
      color red
      text-decoration none
      &:hover
        text-decoration underline
.layout
  display none
  .widget-flex-wrap
    display flex
    justify-content center
    width fit-content
    margin 0 auto
    margin-bottom 20px
  .basic-info-widget,
  .customer-details-widget
    height 400px
  .seat-info-payment-widget
    height 600px
  .widget
    overflow-y auto
    overflow-x hidden
    width 450px
    margin 0 10px
    background #161a1d
    border-radius .3em
    position relative
    box-shadow 0 5px 12px 5px rgba(0,0,0,0.1)
    border 1px solid #32333e
    .widget-title
      color lightgrey
      font-size 25px
      text-align center
      margin 10px 0
  .basic-info-widget
    .info-wrap-container
      position absolute
      top calc(50% - 15px)
      left 50%
      width fit-content
      transform translate(-50%, -50%)
      .info-wrap
        &.order-code-wrap
          margin-bottom 50px
        label
          font-size 15px
          color grey
          display block
          text-align center
        h1
          font-size 30px
          text-align center
          margin 0
          color white
  .customer-details-widget
    .details-container
      width calc(100% - 60px)
      margin-left 30px
      margin-top 30px
      height fit-content
      &.flex-wrap
        display flex
        justify-content left
        flex-flow wrap row
        .detail-wrap
          width 50%
          height fit-content
          margin-bottom 20px
          position relative
          label
            color grey
            font-size 13px
          p
            margin 0
            color white
            font-size 15px
            word-wrap break-word
