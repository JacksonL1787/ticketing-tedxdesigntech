.content
  position absolute
  top calc(50% - 75px)
  left 50%
  transform translate(-50%, -50%)
  width fit-content
  height fit-content
  text-align center
  .loader-wrap
    width 300px
    height 300px
    border-radius 200px
    position relative
    margin 0 auto
    .icon
      background-image url('/img/loader.svg')
      background-size cover
      background-position center
      background-repeat no-repeat
      width 225px
      height 225px
      position absolute
      top calc(50% + 30px)
      left 50%
      transform translate(-50%, -50%)
  .title
    color white
    margin 20px 0 0
    font-size 45px
  .subtitle
    color #949494
    margin 10px 0 0
    font-size 25px
    font-weight 400
    span
      font-weight 700
      color lightgrey
  .info
    color grey
    font-size 17px
    line-height 130%
    letter-spacing 0.7px
    margin 20px auto 0
    width 650px
    font-weight 300
    a
      color #ff4220
      font-weight 600
      text-decoration none
      &:hover
        text-decoration underline
