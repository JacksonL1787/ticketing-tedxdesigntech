.message-container
  position fixed
  top 10px
  left 50%
  transform translateX(-50%)
  z-index 10000
  .message-wrap
    height fit-content
    width fit-content
    padding 10px 50px 10px 45px
    max-width 350px
    margin 0 auto 5px
    opacity 0
    background #161A1D
    border-radius .3em
    border 1px solid #32333e
    box-shadow 0 2px 12px 2px rgba(0,0,0,0.2)
    animation fadeMessage 7s
    .message-content
      position relative
      display flex
      justify-content left
      align-items center
      .icon
        width 20px
        height 20px
        background-image url('/img/cancel.svg')
        background-size cover
        background-position center
        background-repeat no-repeat
        margin-right 10px
        margin-top 3px
      p.message
        color white
        margin 0
        font-size 14px
        width fit-content

.content
  width fit-content
  margin 30px auto 0
  height fit-content
  position relative
  .your-cart-info
    width 400px
    padding 20px 0
    height fit-content
    background #161a1d
    border-radius .3em
    box-shadow 0 5px 12px 5px rgba(0,0,0,0.1)
    border 1px solid #32333e
    .section-title
      color white
      color lightgrey
      font-size 25px
      text-align center
      margin 15px 0
    .seats-wrap
      width 90%
      margin 20px auto 0
      position relative
      .seat-wrap
        display flex
        justify-content left
        position relative
        height fit-content
        width 90%
        margin 0 auto
        padding 15px 0
        margin-bottom 10px
        .seat
          width 27.5px
          height 27.5px
          border-radius .2em
          position relative
          background red
          margin-right 15px
          margin-top 5px
          .icon
            width 15px
            height 15px
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-image url('/img/star.svg')
            background-size cover
            background-position top
            background-repeat no-repeat
        .seat-info
          .seat-number
            color white
            margin 0
            font-weight 600
            font-size 16px
            margin-bottom 5px
          .seat-status
            color lightgrey
            margin 0 0 5px
            font-size 15px
            font-weight 100
          .seat-name
            color grey
            margin 0
            font-size 13px
        .seat-price
          position absolute
          right 0
          margin 0
          color lightgrey
          font-weight 900
          top 50%
          transform translateY(-50%)
    .total-wrap
      width 90%
      margin-left 5%
      height fit-content
      padding 30px 0
      border-top 1px solid #32333e
      .charges
        width 90%
        margin-left 5%
        .flex-wrap
          display flex
          justify-content space-between
          margin-bottom 15px
          p
            margin 0
          p.title
            font-size 16px
            color lightgrey
            font-weight bold
          p.charge
            font-size 16px
            color lightgrey
        h2.total-price
          color white
          text-align center
          font-weight 900
          margin 20px 0 0
    .payment
      width 90%
      margin-left 5%
      height fit-content
      padding 10px 0
      border-top 1px solid #32333e
      .terms-and-conditions
        color grey
        font-size 12px
        margin 10px 0
        text-align center
        a
          color grey
          text-decoration underline
      .purchase-btn
        background red
        border-radius 200px
        width 200px
        margin 20px auto 0
        font-size 15px
        display block
        padding 10px 0
        cursor pointer
        color white
        font-weight 800
        border none

@keyframes fadeMessage
  0%
    opacity 0
    margin-top -15px
  10%
    opacity 1
    margin-top 0
  93%
    opacity 1
  100%
    opacity 0
