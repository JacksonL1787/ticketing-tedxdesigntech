.top
  width 100%
  height fit-content
  margin-bottom 50px
  .go-back-btn
    position absolute
    top 20px
    left 20px
    background red
    border none
    color white
    padding 7px 20px
    cursor pointer
    font-weight 700
    font-size 15px
    border-radius .3em
    transition background .3s
    &:hover
      background #de0000
  .page-title
    color lightgrey
    text-align center
    font-weight 500
    letter-spacing 1px
    margin 16px 0

.content
  width fit-content
  margin 30px auto 0
  height fit-content
  position relative
  display flex
  .basic-info-form
    width fit-content
    padding 0 40px
    margin-right 20px
    height fit-content
    background #161a1d
    border-radius .3em
    box-shadow 0 5px 12px 5px rgba(0,0,0,0.1)
    border 1px solid #32333e
    .section-title
      color white
      color lightgrey
      font-size 25px
      text-align center
      margin 15px 0 0
    .section-info
      margin 10px auto 15px
      color grey
      text-align center
      font-size 14px
      max-width 300px
    .form-wrap
      width fit-content
      margin 40px auto
      .dual-input-wrap
        display flex
        justify-content center
        margin-bottom 15px
        .first-name-inpt,
        .city-inpt
          margin-right 10px
      input
        background rgba(0,0,0,0.17)
        padding 10px
        border-radius .3em
        border none
        outline none
        color white
        font-size 15px
        transition background .3s
        &:focus
          background rgba(0,0,0,0.23)
      .email-inpt,
      .confirm-email-inpt,
      .phone-number-inpt,
      .address-line-one-inpt,
      .address-line-two-inpt,
      .zip-code-inpt
        width 365px
        display block
        margin-bottom 15px
      .address-line-one-inpt
        margin-top 40px
  .next-step
    width 200px
    margin 30px auto 0
    cursor pointer
    height 35px
    border-radius 200px
    background red
    position relative
    &.disabled
      background #717171 !important
      cursor not-allowed !important
      p
        color #dadada !important
      .arrow
        opacity 0 !important
    &:hover
      .arrow
        right 10px
        opacity 1
    p
      color white
      position absolute
      margin 0
      font-size 16px
      font-weight 800
      letter-spacing 0.5px
      top 50%
      left 50%
      transform translate(-50%, -50%)
    .arrow
      background-image url('/img/right-arrow.svg')
      background-size cover
      background-position center
      height 23px
      width 22px
      opacity 0
      position absolute
      top calc(50% + 2.5px)
      right 20px
      transform translateY(-50%)
      transition right .3s, opacity .3s
