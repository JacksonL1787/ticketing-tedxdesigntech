.search-wrap
  margin 30px auto 0
  width fit-content
  height fit-content
  position relative
  display flex
  .search-bar-wrap
    position relative
    margin 0 10px 0
    display flex
    justify-content center
    .search-icon-wrap
      border-top-left-radius 1000000px
      border-bottom-left-radius 1000000px
      width 50px
      height 45px
      position relative
      background #161a1d
      border 1px solid #32333e
      border-right none
      .icon
        position absolute
        width 20px
        height 23px
        background-image url('/img/dashboard/search-icon.svg')
        background-size cover
        background-position center
        background-repeat no-repeat
        top calc(50% + 3px)
        left calc(50% + 1px)
        opacity 0.7
        transform translate(-50%, -50%)
    .search-bar
      background #161a1d
      padding 0
      border 1px solid #32333e
      border-left none
      border-top-right-radius 1000000px
      border-bottom-right-radius 1000000px
      width 450px
      color white
      height 45px
      font-size 16px
      margin 0

  .filter-bar
    display flex
    margin 0 10px
    .filter-option
      border 1px solid #32333e
      height 45px
      width 125px
      position relative
      background #161a1d
      cursor pointer
      transition background .3s
      &:hover
        background #242b2f
      &.today-filter
        border-top-left-radius 1000000px
        border-bottom-left-radius 1000000px
        border-right none
      &.all-filter
        border-top-right-radius 1000000px
        border-bottom-right-radius 1000000px
        border-left none
      &.month-filter
        border-left none
      &.active
        background #242b2f
      p
        margin 0
        color white
        text-align center
        position absolute
        font-size 14px
        top 50%
        left 50%
        transform translate(-50%, -50%)

h2.no-orders
  color grey
  text-align center
  margin 75px 0 20px
  font-weight 400
  display none
.orders-wrap
  display flex
  width 100%
  justify-content center
  flex-flow row wrap
  margin 30px 0
  .order
    height 460px
    width 320px
    background #161a1d
    position relative
    border-radius .3em
    overflow hidden
    margin 10px
    display block
    &.hidden
      display none
    .top
      width calc(100% - 30px)
      padding 20px 15px
      border-top-left-radius .3em
      border-top-right-radius .3em
      display flex
      justify-content space-between
      background rgba(0,0,0,0.2)
      h1.order-id
        color white
        margin 0
        letter-spacing 1px
        font-size 25px
        margin-top 7.5px
      .action-btn
        width 40px
        height 40px
        border-radius .3em
        position relative
        cursor pointer
        background rgba(255,255,255,0.09)
        transition background .3s
        &:hover
          background rgba(255,255,255,0.05)
        .icon
          background-image url('/img/dashboard/eye-icon.svg')
          opacity 0.6
          background-size cover
          background-repeat no-repeat
          background-position center
          width 20px
          height 20px
          position absolute
          top calc(50% + 3px)
          left 50%
          transform translate(-50%, -50%)
    .content
      width calc(100% - 30px)
      margin 30px auto 0
      height calc(100% - 92px)
      overflow-y scroll
    .info-wrap
      margin 0 0 20px
      label
        color grey
        font-size 13px
        font-weight 600
      p
        margin 0
        font-size 17px
        margin-top 2px
        color lightgrey
    .pill-wrap
      display flex
      flex-flow row wrap
      margin-top 5px
      justify-content left
      .pill
        color #f1556c
        font-weight 800
        background rgba(241,85,108,.2)
        padding 4px 20px
        margin 0 5px 5px 0
        font-size 12px
        border-radius .3em

@media only screen and (max-width 1425px)
  .search-wrap
    flex-flow column
    .search-bar-wrap
      margin-bottom 15px
